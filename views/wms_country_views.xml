<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- TREE -->
    <record id="wms_country_tree" model="ir.ui.view">
        <field name="name">wms.country.tree</field>
        <field name="model">res.country</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="id"/>
                <field name="search_deep"/>
            </tree>
        </field>
    </record>

    <!-- FORM -->
    <record id="wms_country_form" model="ir.ui.view">
        <field name="name">wms.country.form</field>
        <field name="model">res.country</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <!-- Title Block -->
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Name"/>
                        </h1>
                    </div>

                    <group>
                        <group>
                            <field name="id"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>


    <record id="wms_country_act_window" model="ir.actions.act_window">
        <field name="name">Countries</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">res.country</field>
        <field name="view_mode">tree,form</field>
    </record>


    <menuitem id="wms_country_menu"
              action="wms_country_act_window"
              parent="wms_locations_group_menu"
              name="Countries" sequence="200"/>

</odoo>
